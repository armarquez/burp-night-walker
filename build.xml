<project name="burp-night-walker" default="dist" basedir=".">

    <!-- set global properties for this build -->
    <property name="src" location="src"/>
    <property name="lib" location="lib"/>
    <property name="burpsuite.jar" location="${lib}/burpsuite_free_latest.jar"/>
    <property name="build" location="build"/>
    <property name="dist" location="dist"/>
    <path id="classpath">
        <fileset dir="lib" includes="*.jar"/>
    </path>

    <target name="init">
        <!-- Create the time stamp -->
        <tstamp/>
        <!-- Create the build directory structure used by compile -->
        <mkdir dir="${build}"/>
        <mkdir dir="${lib}"/>
        <get src="https://portswigger.net/DownloadUpdate.ashx?Product=Free" dest="${burpsuite.jar}" skipexisting="true"/>
    </target>


    <target name="compile" depends="init" description="compile the source">
        <!-- Compile the java code from ${src} into ${build} -->
        <javac srcdir="${src}" destdir="${build}" classpathref="classpath" includeantruntime="false"/>
    </target>

    <target name="debug_dist" depends="init" description="generate the distribution for debugging">
        <!-- Compile the java code from ${src} into ${build} with debugging options-->
        <javac srcdir="${src}" destdir="${build}" debug="true" classpathref="classpath" includeantruntime="false"/>

        <!-- Create the distribution directory -->
        <mkdir dir="${dist}"/>

        <!-- Put everything in ${build} into the MyProject-${DSTAMP}-debug.jar file -->
        <jar jarfile="${dist}/${ant.project.name}-${DSTAMP}-debug.jar" basedir="${build}">
            <manifest>
                <attribute name="Main-Class" value="burp.BurpExtender"/>
            </manifest>
            <zipgroupfileset dir="lib" includes="*.jar" excludes="${burpsuite.jar}"/>
        </jar>
    </target>

    <target name="dist" depends="compile" description="generate the distribution">
        <!-- Create the distribution directory -->
        <mkdir dir="${dist}"/>

        <!-- Put everything in ${build} into the MyProject-${DSTAMP}.jar file -->
        <jar jarfile="${dist}/${ant.project.name}-${DSTAMP}-debug.jar" basedir="${build}">
            <manifest>
                <attribute name="Main-Class" value="burp.BurpExtender"/>
            </manifest>
            <zipgroupfileset dir="lib" includes="*.jar" excludes="${burpsuite.jar}"/>
        </jar>
    </target>

    <target name="clean" description="clean up">
        <!-- Delete the ${build} and ${dist} directory trees -->
        <delete dir="${build}"/>
        <delete dir="${dist}"/>
    </target>
</project>
